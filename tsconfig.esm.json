{
	"extends": "./tsconfig",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/esm",
		"declarationDir": "dist/dts",
		"noEmit": false,
		"declaration": true,
		"sourceMap": true,
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"./src/examples",
		"./src/tests/**/*",
		"./src/**/*.test.ts",
		"./src/temp/**/*"
	]
}
